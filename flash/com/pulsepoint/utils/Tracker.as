package com.pulsepoint.utils {	import com.pulsepoint.utils.MacroHelper;	import flash.events.Event;	import flash.events.IOErrorEvent;	import flash.events.SecurityErrorEvent;	import flash.external.ExternalInterface;	import flash.net.URLLoader;	import flash.net.URLRequest;	public class Tracker {		public function Tracker():void {		}		public static function fire(pixel:Array):void {			for (var i:Number = 0; i < pixel.length; i++) {				var loader:URLLoader = new URLLoader();				var onPixelEvent:Function = function(e:Event) {				}				loader.addEventListener(IOErrorEvent.IO_ERROR, onPixelEvent);				loader.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onPixelEvent);				if (pixel[i] && pixel[i] != "") {					try {						loader.load(new URLRequest(MacroHelper.replaceMacro(pixel[i])));					} catch (e:Error) {					}				}			}		}	}}